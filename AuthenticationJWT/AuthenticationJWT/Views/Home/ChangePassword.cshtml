@model AuthenticationJWT.Models.AlterPassword
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/shared/pagelayout.css" />
    <link rel="stylesheet" href="~/Content/user-layout/header-footer-style.css" />
    <link rel="stylesheet" href="~/Content/user-layout/edit-style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/userhome-scripts.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <title>Change Password</title>
</head>
<body>
    @Html.Partial("_Header", Model)
    <div class="content">
        <form action="/Home/ChangePassword" method="post" class="edit-user-form">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.Password)
            @Html.HiddenFor(model => model.Email)
            <table>
                <tr>
                    <th>Current Password:</th>
                    <td class="details">
                        <div>
                            @Html.TextBoxFor(model => model.Current, new { autocomplete = "off", id = "current" })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Current)
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>New Password:</th>
                    <td class="details">
                        <div>
                            @Html.PasswordFor(model => model.New, new { autocomplete = "off", id = "new" })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.New)
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>Confirm Password:</th>
                    <td class="details">
                        <div>
                            @Html.TextBoxFor(model => model.Confirm, new { autocomplete = "off", id = "confirm" })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Confirm)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="save-action" id="save-action-btn">
                        <input type="submit" value="Submit" class="button" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    @Html.Partial("_Footer")
    @if (ViewBag.Error != null)
    {
        <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Error");
                        };
        </script>
    }
</body>
</html>
